<%= simple_form_for(@menu) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :address %>
    <%= f.datetime_select :pick_up, :ampm => true, :minute_step => 30%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
