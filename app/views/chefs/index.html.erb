<h1>Chefs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chefs.each do |chef| %>
    <tr>
      <td><%= chef.name %></td>
      <td><%= chef.description %></td>
      <td><%= chef.price %></td>
      <td><%= link_to 'Show', chef %></td>
      <td><%= link_to 'Edit', edit_chef_path(chef) %></td>
      <td><%= link_to 'Destroy', chef, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
